{
    "name": "soluble/japha",
    "description": "Soluble PHP Java bridge integration",
    "license": "MIT",
    "keywords": [
        "java",
        "bridge",
        "phpjavabridge"
    ],
    "homepage": "http://soluble.io",
    "type": "library",
    "authors": [
        {
            "name": "SÃ©bastien Vanvelthem",
            "homepage": "https://github.com/belgattitude"
        }
    ],
    "autoload": {
        "psr-4": {
            "Soluble\\Japha\\": "src/Soluble/Japha"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Soluble\\JaphaTest\\": "test/Soluble/JaphaTest"
        }
    },
    "require": {
        "php": "^5.4 || ^7.0"
    },
    "require-dev" : {
        "belgattitude/pjbserver-tools": "^2.0.2",
        "phpunit/phpunit": "^4.8 || ^5.4"
    },
    "scripts": {
        "test": "phpunit"
    },
    "suggest": {
        "belgattitude/pjbserver-tools": "PHPJavabridge standalone server support (unit tests)"
    },
    "archive": {
        "exclude": ["test", "doc", ".travis.yml", ".codeclimate.yml", ".coveralls.yml", ".scrutinizer.yml", ".php_cs", ".gitignore", "phpcs.xml"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }    
}
