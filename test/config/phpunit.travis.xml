<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="../bootstrap.php"
>

    <php>
        <ini name="date.timezone" value="Europe/Brussels"/>
        <server name="PHPUNIT_CACHE_DIR" value="./tmp/cache" />		
        
        
        <server name="PJB_URL" value="127.0.0.1:8083" />
        <server name="PJB_SERVLET" value="false" />
        <server name="PJB_SERVLET_ADDRESS" value="/javabridge-bundle/java/servlet.phpjavabridge" />
        
        
        <server name="MYSQL_DRIVER" value="Mysqli" />
		
        <!--
        <server name="MYSQL_HOSTNAME" value="localhost" />
        -->
        <server name="MYSQL_HOSTNAME" value="127.0.0.1" />
        <server name="MYSQL_USERNAME" value="root" />
        <server name="MYSQL_PASSWORD" value="" />
        <server name="MYSQL_DATABASE" value="phpunit_soluble_test_db" />
        
    </php>

    <testsuites>
        <testsuite name="soluble/japha">
            <directory>../src/Soluble/Japha</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="../../build/logs/clover.xml"/>
    </logging>		
</phpunit>